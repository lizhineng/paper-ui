page {
  --pui-btn-text-color: var(--color-secondary-100);
  --pui-btn-bg-color: var(--color-secondary-600);
  --pui-btn-active-bg-color: var(--color-secondary-700);
  --pui-btn-disabled-text-color: var(--color-secondary-500);
  --pui-btn-disabled-bg-color: var(--color-secondary-100);

  --pui-btn-primary-text-color: var(--color-primary-100);
  --pui-btn-primary-bg-color: var(--color-primary-600);
  --pui-btn-primary-active-bg-color: var(--color-primary-700);
  --pui-btn-primary-disabled-text-color: var(--color-primary-500);
  --pui-btn-primary-disabled-bg-color: var(--color-primary-100);
}

/**
 * Reset defaults.
 */

button:not([size=mini]) {
  margin-left: 0;
  margin-right: 0;
  width: auto;
}

button[disabled] {
  color: initial;
}

/**
 * Component
 */

.btn {
  display: inline-block;
  color: var(--pui-btn-text-color);
  background-color: var(--pui-btn-bg-color);
  box-sizing: border-box;
  transition: color,background-color 50ms linear;
}

.btn:not([disabled]):active {
  background-color: var(--pui-btn-active-bg-color);
}

.btn[disabled] {
  color: var(--pui-btn-disabled-text-color);
  background-color: var(--pui-btn-disabled-bg-color);
}

.btn[type="primary"] {
  color: var(--pui-btn-primary-text-color);
  background-color: var(--pui-btn-primary-bg-color);
}

.btn[type="primary"]:not([disabled]):active {
  background-color: var(--pui-btn-primary-active-bg-color);
}

.btn[type="primary"][disabled] {
  color: var(--pui-btn-primary-disabled-text-color);
  background-color: var(--pui-btn-primary-disabled-bg-color);
}

.btn-pill {
  border-radius: 3rem;
}

.btn-block {
  display: block;
}

/**
 * Button sizes
 */

.btn-md {
  padding: .75rem 1.5rem;
  font-weight: 500;
  font-size: 1rem;
  line-height: 1.5;
}

.btn-lg {
  padding: .75rem 1.5rem;
  font-weight: 500;
  font-size: 1.25rem;
  line-height: 2;
}

.btn-sm {
  padding: .5rem 1rem;
  font-weight: 500;
  font-size: .875rem;
  line-height: 1.25rem;
}

.btn-xs {
  padding: .3125rem 1rem;
  font-weight: 400;
  font-size: .875rem;
  line-height: 1.25rem;
}